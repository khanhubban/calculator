<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item> <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">28sp</item> <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item> <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/button_text_light</item>
    </style>

    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/button_dark_grey_background</item>
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/button_operator_background</item>
    </style>

    <style name="CalculatorButton.Function" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/button_ac_background</item>
        <item name="android:textColor">@color/button_text_dark</item>
    </style>

    <style name="CalculatorButton.Equals" parent="CalculatorButton.Operator">
        <item name="android:backgroundTint">@color/button_equals_background</item>
    </style>

</resources>